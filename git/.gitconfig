[user]
	name = Oscar De Alva
	email = oscar.ivan98@gmail.com
[init]
	defaultBranch = main
[alias]
	logline = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[core]
	editor = hx
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	side-by-side = true
	line-numbers = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[includeIf "gitdir:~/Documents/FEMSA/"]
	path = ~/Documents/FEMSA/.gitconfig-work
